<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/honor_tea_item_rank"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main_red"/>
    <RelativeLayout
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/honor_tea_item_type"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_45dp"
            android:textStyle="italic"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/honor_tea_item_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_45dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/honor_tea_item_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/honor_tea_item_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_220dp"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"/>
    <RelativeLayout
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/honor_tea_item_add_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_45dp"
            android:textStyle="italic"
            android:textColor="@color/gray"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/honor_tea_item_get_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_45dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/gray"
            android:gravity="center_vertical"/>
    </RelativeLayout>
</LinearLayout>