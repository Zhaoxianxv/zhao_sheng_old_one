<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/maintain_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/main_head_icon"
        android:layout_width="@dimen/margin_50dp"
        android:layout_height="@dimen/margin_50dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"/>

    <LinearLayout
        android:layout_toRightOf="@id/main_head_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_3dp"
        android:layout_marginBottom="@dimen/margin_3dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/maintain_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp"
            android:textSize="@dimen/textsize9"
            android:textColor="#3a3a3a"
            android:singleLine="true"
            android:text="ren"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/maintain_new_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:textSize="@dimen/textsize7"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_15dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="维修状态"/>
            <TextView
                android:id="@+id/maintain_replce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_toLeftOf="@id/maintain_new_state"
                android:textSize="@dimen/textsize7"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="D"/>
        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/maintain_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/textsize5"
        android:text="2017-11-11"/>
</RelativeLayout>