<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <TextView
        android:id="@+id/answer_tab1_item_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_45dp"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/textsize8"
        android:textColor="@color/app_base_text_color"
        android:text="ssss"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/c3_gray"
        android:layout_marginRight="@dimen/margin_20dp"
        android:layout_marginLeft="@dimen/margin_20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_30dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/margin_20dp">
        <ImageView
            android:id="@+id/answer_tab1_item_head"
            android:layout_width="@dimen/margin_25dp"
            android:layout_height="@dimen/margin_25dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/answer_tab1_item_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="sss"
            android:textColor="@color/Gray"
            android:textSize="@dimen/textsize5"
            android:layout_marginLeft="@dimen/margin_5dp"/>
        <View
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/answer_tab1_item_ps"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="sss"
            android:textColor="@color/Gray"
            android:gravity="center_vertical"
            android:textSize="@dimen/textsize5"
            android:layout_marginRight="@dimen/margin_20dp"/>

    </LinearLayout>

</LinearLayout>