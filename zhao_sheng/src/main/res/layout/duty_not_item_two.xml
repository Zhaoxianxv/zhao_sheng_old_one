<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_5dp"
        android:layout_marginLeft="@dimen/margin_5dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginBottom="@dimen/margin_5dp"
        app:cardCornerRadius="@dimen/margin_5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/duty_not_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_20dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:gravity="center_vertical"
                android:textSize="@dimen/textsize7"
                android:text="小结"
                android:layout_marginTop="@dimen/margin_3dp"/>
            <TextView
                android:id="@+id/duty_not_item_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/margin_50dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:gravity="start"
                android:textSize="@dimen/textsize5"
                android:layout_marginTop="@dimen/margin_3dp"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:layout_below="@id/duty_not_title"
                />


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>