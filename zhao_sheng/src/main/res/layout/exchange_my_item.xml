<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp"
            android:minHeight="@dimen/margin_35dp">
            <ImageView
                android:layout_width="@dimen/margin_30dp"
                android:layout_height="@dimen/margin_30dp"
                android:src="@mipmap/scheduleclock"
                android:padding="@dimen/margin_3dp"

                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/exchange_submit_1"
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/textsize6"
                android:layout_weight="1"
                android:textColor="@color/public_color66"
                android:text="www"
                android:gravity="center"/>
            <ImageView
                android:layout_width="@dimen/margin_30dp"
                android:layout_height="@dimen/margin_30dp"
                android:padding="@dimen/margin_3dp"
                android:src="@mipmap/scheduleright"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/exchange_submit_2"
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="match_parent"
                android:textColor="@color/public_color66"
                android:textSize="@dimen/textsize6"
                android:layout_weight="1"
                android:text="www"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_35dp">
            <ImageView
                android:layout_width="@dimen/margin_30dp"
                android:layout_height="@dimen/margin_30dp"
                android:src="@mipmap/scheduleclass"

                android:padding="@dimen/margin_3dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/exchange_submit_3"
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/textsize6"
                android:layout_weight="1"
                android:textColor="@color/public_color66"
                android:text="www"
                android:gravity="center"/>
            <ImageView
                android:layout_width="@dimen/margin_30dp"
                android:layout_height="@dimen/margin_30dp"

                android:padding="@dimen/margin_3dp"
                android:src="@mipmap/scheduleright"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/exchange_submit_4"
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/textsize6"
                android:layout_weight="1"
                android:textColor="@color/public_color66"
                android:text="www"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/exchange_tag_red_text"
        android:layout_width="@dimen/margin_60dp"
        android:layout_height="@dimen/margin_60dp"
        android:textColor="@color/red"
        android:gravity="center"
        android:padding="@dimen/margin_15dp"
        android:background="@drawable/oval_line1_red"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="@dimen/margin_20dp"
        android:rotation="-45"
        android:text="拒绝"/>

</FrameLayout>