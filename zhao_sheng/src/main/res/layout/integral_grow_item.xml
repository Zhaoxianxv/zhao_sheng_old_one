<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/integral_grow_item_title"
        android:layout_width="wrap_content"
        android:maxWidth="@dimen/margin_120dp"
        android:layout_height="@dimen/margin_50dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_5dp"
        />
    <ImageView

        android:id="@+id/integral_grow_item_seticon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:src="@drawable/app_setting_icon"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/integral_grow_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/integral_grow_item_seticon"
        android:layout_toRightOf="@id/integral_grow_item_title"
        android:gravity="right"
        android:layout_marginLeft="@dimen/margin_30dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:text="name"/>

</RelativeLayout>