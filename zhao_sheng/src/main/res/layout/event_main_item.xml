<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/event_main_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_25dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:text="2017"
            android:textSize="@dimen/textsize5"
            android:gravity="center"
            android:background="@color/Gainsboro"
            />
        <android.support.v7.widget.CardView
            android:id="@+id/event_my_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_main_top"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:touchscreenBlocksFocus="true"
            android:layout_marginTop="@dimen/margin_10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/event_add_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_35dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/red"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/textsize9"
                    tools:text="@string/ss_search_edit_content_hint"

                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/main_line"/>
                <TextView
                    android:id="@+id/event_fuz_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/textsize7"
                    tools:text="one"

                    />
                <TextView
                    android:id="@+id/event_item_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/textsize7"
                    tools:text="two"

                    />
                <TextView
                    android:id="@+id/event_item_site"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:visibility="gone"
                    tools:text="three"
                    />
                <TextView
                    android:id="@+id/event_item_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize7"
                    tools:text="foru"

                    />
                <com.yfy.view.multi.MultiPictureView
                    android:id="@+id/event_main_mult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:imageLayoutMode="STATIC"
                    app:addDrawable="@color/white"
                    app:deleteDrawable="@drawable/ic_pinat_24dp"
                    android:layout_marginTop="@dimen/margin_3dp"
                    app:max="4"
                    app:ratio="1"
                    app:space="6dp"
                    app:span="4"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <View
            android:id="@+id/event_padding"
            android:layout_width="match_parent"
            android:layout_below="@id/event_my_card"
            android:layout_height="@dimen/margin_1dp"
            android:background="@color/transparent"/>
        <RelativeLayout
            android:layout_width="@dimen/margin_15dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/event_padding"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin_40dp"
            >
            <ImageView
                android:layout_width="@dimen/margin_2dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@color/white"/>
            <ImageView
                android:layout_width="@dimen/margin_15dp"
                android:layout_height="@dimen/margin_15dp"
                android:layout_marginTop="@dimen/margin_30dp"
                android:background="@drawable/award_cricle_color_gray"
                />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>