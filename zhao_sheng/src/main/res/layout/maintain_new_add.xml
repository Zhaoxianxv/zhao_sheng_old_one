<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f3_gray"
    android:orientation="vertical" >

    <com.yfy.view.SQToolBar style="@style/App_SQToolbar"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/f3_gray"
            android:orientation="vertical" >


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layer_top_bottom_grayline_whitebg"
                    android:orientation="vertical"
            >
                <EditText
                        android:id="@+id/trouble_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:minHeight="@dimen/margin_100dp"
                        android:background="@null"
                        android:textSize="@dimen/textsize8"
                        android:gravity="start"
                        android:hint="维修备注..." />
                <com.yfy.view.multi.MultiPictureView
                        android:id="@+id/maintian_add_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="@dimen/margin_10dp"
                        app:editable="true"
                        app:max="9"
                        app:ratio="1"
                        app:space="2dp"
                        app:span="4" />

            </LinearLayout>

            <RelativeLayout
                    android:background="@drawable/layer_top_bottom_grayline_whitebg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15dp">

                <EditText
                        android:id="@+id/trouble_place"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:layout_marginBottom="@dimen/margin_2dp"
                        android:focusable="false"
                        android:hint="@string/repair_hint"
                        android:textSize="@dimen/textsize8"
                        android:minHeight="45dp"
                        android:padding="10dp" />
            </RelativeLayout>



            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/margin_15dp"
                    android:background="@drawable/layer_top_bottom_grayline_whitebg" >




                <EditText
                        android:id="@+id/main_add_tell"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:layout_marginBottom="@dimen/margin_2dp"
                        android:hint="请填写联系电话（手机号码）"
                        android:inputType="phone"
                        android:textSize="@dimen/textsize8"
                        android:minHeight="45dp"
                        android:padding="10dp" />

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/margin_15dp"
                android:background="@drawable/layer_top_bottom_grayline_whitebg" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/repair_dep"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:gravity="center"
                    android:textColor="@color/app_base_color" />
                <TextView
                    android:id="@+id/trouble_dep"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:paddingRight="@dimen/margin_10dp"
                    android:drawablePadding="10dp"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@drawable/app_setting_icon"
                    android:text="未选择" />


            </RelativeLayout>



            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/margin_15dp"
                    android:background="@drawable/layer_top_bottom_grayline_whitebg"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:textColor="@color/app_base_color"
                        android:text="报修时间：" />
                <TextView
                        android:id="@+id/trouble_time"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical|right"
                        android:padding="10dp"
                        android:text="@string/exa_date"
                        android:drawableRight="@drawable/app_setting_icon"
                        android:drawablePadding="@dimen/margin_10dp"
                        android:layout_alignParentRight="true"
                />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>