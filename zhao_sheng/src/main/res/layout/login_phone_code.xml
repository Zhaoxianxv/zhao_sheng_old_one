<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/WhiteSmoke"
    android:orientation="vertical">
    <com.yfy.view.SQToolBar style="@style/App_SQToolbar"/>

    <EditText
        android:id="@+id/reset_edit_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_45dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/icon_phone_reg"
        android:drawablePadding="10dp"
        android:inputType="phone"
        android:padding="10dp"
        android:hint="输入已绑定电话号码"
        android:textSize="15sp"
        android:textColor="@color/gray"
        android:textColorHint="@color/gray"
        android:singleLine="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/reset_edit_code"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_height="@dimen/margin_45dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableLeft="@drawable/icon_code_reg"
            android:drawablePadding="10dp"
            android:inputType="number"
            android:padding="10dp"
            android:hint="验证码"
            android:textSize="15sp"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray"
            android:singleLine="true" />
        <TextView
            android:id="@+id/send_code"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/radius4_graybg_grayline"
            android:gravity="center"
            android:textColor="@color/main_red"
            android:text="获取验证码" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <EditText
        android:id="@+id/reset_edit_new_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_45dp"
        android:background="@android:color/white"
        android:hint="@string/please_edit_new_password"
        android:selectAllOnFocus="true"
        android:drawablePadding="5dp"
        android:textColorHint="@color/gray"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
        android:textSize="15sp"
        android:drawableTint="@color/gray"
        android:paddingLeft="@dimen/margin_10dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <EditText
        android:id="@+id/reset_alter_edit_new_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_45dp"
        android:background="@android:color/white"
        android:hint="@string/please_alter_edit_password"
        android:selectAllOnFocus="true"
        android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
        android:drawableTint="@color/gray"
        android:textSize="15sp"
        android:textColorHint="@color/gray"
        android:inputType="textPassword"
        android:drawablePadding="5dp"
        android:paddingLeft="@dimen/margin_10dp"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginBottom="@dimen/margin_10dp"/>
    <android.support.v7.widget.CardView
        android:id="@+id/forget_commit_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_45dp"
        android:layout_margin="@dimen/margin_5dp"
        app:cardBackgroundColor="@color/app_base_color"
        app:cardCornerRadius="@dimen/margin_5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="提交"/>
    </android.support.v7.widget.CardView>

</LinearLayout>
