<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.yfy.view.SQToolBar style="@style/App_SQToolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_45dp"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginRight="@dimen/margin_40dp"
        android:layout_marginTop="@dimen/margin_30dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/cyc_edit_type"
            android:layout_width="@dimen/margin_50dp"
            android:layout_height="@dimen/margin_20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/cyc_tree"/>
        <Spinner
            android:id="@+id/cyc_edit_pro_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_45dp"
            android:layout_marginLeft="@dimen/margin_20dp"
            >

        </Spinner>
    </LinearLayout>

    <EditText
        android:id="@+id/praise_spoor_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_150dp"
        android:background="@drawable/radius4_graybg_grayline"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginRight="@dimen/margin_20dp"
        android:hint="@string/edit_hint"
        android:gravity="start"
        android:layout_marginTop="@dimen/margin_40dp"
        android:textColorHint="@color/hint"
        android:padding="@dimen/margin_3dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/margin_30dp"
        android:textColor="@color/main_red"
        android:text="图片"/>
    <com.yfy.view.multi.MultiPictureView
        android:id="@+id/cyc_add_mult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="@dimen/margin_10dp"
        app:editable="true"
        app:max="9"
        app:ratio="1"
        app:space="2dp"
        app:span="4" />


</LinearLayout>
