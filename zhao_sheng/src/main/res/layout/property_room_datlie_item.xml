<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/property_article_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="类别名"
        android:textColor="@android:color/black" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_marginRight="@dimen/margin_20dp"
        android:text="上传"
        />

    <LinearLayout
        android:id="@+id/zhong_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/property_article_name">

        <TextView
            android:id="@+id/property_article_all_good"
            android:layout_width="wrap_content"
            android:padding="@dimen/margin_5dp"
            android:layout_weight="1"
            android:layout_height="40dp"

            android:gravity="center"
            android:layout_marginRight="@dimen/margin_40dp"
            android:paddingLeft="10dp"
            android:text=""
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/property_article_deficiency"
            android:layout_width="wrap_content"
            android:padding="@dimen/margin_5dp"
            android:layout_toLeftOf="@id/property_article_all_good"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:layout_weight="1"
            android:text="缺失:0"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/property_article_bad"
            android:layout_width="wrap_content"
            android:padding="@dimen/margin_5dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/margin_20dp"
            android:paddingLeft="10dp"
            android:text="损坏:0"
            android:textColor="@android:color/black" />
    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上次核对时间：xx"
        android:textColor="@color/a3_gray"
        android:layout_alignParentRight="true"
        android:layout_below="@id/zhong_layout"
        android:layout_marginBottom="@dimen/margin_5dp"
        android:layout_marginRight="@dimen/margin_10dp"/>
</RelativeLayout>