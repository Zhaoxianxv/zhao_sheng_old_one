<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/event_stu_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/White">
    <ImageView
        android:id="@+id/event_head_icon"
        android:layout_width="@dimen/margin_50dp"
        android:layout_height="@dimen/margin_50dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_marginBottom="@dimen/margin_5dp"
        android:src="@drawable/oval_gray"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"/>




    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/event_stu_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"

        android:layout_marginRight="@dimen/margin_45dp"
        android:gravity="center_vertical"
        android:text="@string/app_name"/>
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/event_head_check"
        android:layout_width="@dimen/margin_40dp"
        android:layout_height="@dimen/margin_40dp"
        app:srcCompat="@drawable/ic_keyboard_arrow_right_gray_24dp"
        android:layout_alignParentRight="true"
        android:padding="6dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_3dp"
        app:tint="@color/Gray"

        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/event_head_icon"
        android:layout_marginLeft="@dimen/margin_5dp"
        android:layout_toLeftOf="@id/event_stu_tag">
        <TextView
            android:id="@+id/event_stu_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:textStyle="bold"
            android:textSize="@dimen/textsize8"
            android:singleLine="true"
            android:text="name"/>
        <TextView
            android:id="@+id/event_stu_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize7"
            android:layout_below="@id/event_stu_name"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="content"/>

    </RelativeLayout>


</RelativeLayout>