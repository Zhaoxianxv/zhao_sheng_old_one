<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteSmoke"
    tools:context="com.yfy.app.footbook.FootSuggestActivity">

    <com.yfy.view.SQToolBar style="@style/App_SQToolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_120dp"
        android:background="@color/White">
        <EditText
            android:id="@+id/foot_suggest_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/suggest_scan"
        android:layout_marginTop="@dimen/margin_15dp"
        android:textColor="@color/red"
        android:paddingLeft="@dimen/margin_5dp"
        android:paddingRight="@dimen/margin_5dp"/>
</LinearLayout>
