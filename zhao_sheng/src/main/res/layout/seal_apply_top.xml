<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_45dp"
        android:background="@color/White">

        <TextView
            android:id="@+id/seal_apply_user_name_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:textStyle="bold"
            android:textSize="@dimen/textsize7"
            android:text="申请人："/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/seal_apply_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_text"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:text="申请人"/>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5dp"
        android:background="@color/Gainsboro"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_45dp"
        android:background="@color/White">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:textStyle="bold"
            android:textSize="@dimen/textsize7"
            android:text="申请时间："/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/seal_apply_apply_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_text"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:text="申请时间"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5dp"
        android:background="@color/Gainsboro"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_45dp"
        android:visibility="gone"
        android:background="@color/White">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:textStyle="bold"
            android:textSize="@dimen/textsize7"
            android:text="查看印章预约情况"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/seal_can"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/gray_text"
            android:gravity="center_vertical|right"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_gray_24dp"
            android:text=""/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5dp"
        android:background="@color/Gainsboro"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_45dp"
        android:background="@color/White">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:textStyle="bold"
            android:textSize="@dimen/textsize7"
            android:text="审批人："/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/seal_apply_choice_master_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/gray_text"
            android:gravity="center_vertical|right"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_gray_24dp"
            android:text="审批人"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5dp"
        android:background="@color/Gainsboro"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_45dp"
        android:background="@color/White">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:textStyle="bold"
            android:textSize="@dimen/textsize7"
            android:text="印章类型："/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/seal_apply_seal_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/gray_text"
            android:gravity="center_vertical|right"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_gray_24dp"
            android:text="印章类型"/>
    </RelativeLayout>

</LinearLayout>