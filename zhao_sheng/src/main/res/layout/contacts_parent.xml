<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/contacts_group_layout"
	android:layout_width="match_parent"
	android:background="@color/f3_gray"
	android:layout_height="45dp">

	<ImageView
		android:id="@+id/contacts_arrow"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_centerVertical="true"
		android:layout_marginLeft="15dp"
		android:contentDescription="@null"
		android:src="@drawable/notice_contacts_switch_open" />



	<TextView
		android:id="@+id/contacts_group_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:gravity="center"
		android:singleLine="true"
		android:layout_toRightOf="@id/contacts_arrow"
		android:layout_marginLeft="@dimen/margin_10dp"
		tools:text="name"
		android:textColor="@color/base_color"
		android:textSize="16sp" />

	<android.support.v7.widget.AppCompatImageView
		android:id="@+id/contacts_group_check_box"
		android:layout_width="@dimen/margin_45dp"
		android:layout_height="match_parent"
		android:layout_alignParentRight="true"
		android:scaleType="center"
		android:src="@drawable/ic_stat"
		android:tint="@color/base_color"
		android:layout_centerInParent="true"
		/>
	<TextView
		android:id="@+id/contacts_count"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toLeftOf="@id/contacts_group_check_box"
		android:layout_centerVertical="true"
		android:layout_marginRight="@dimen/margin_10dp"
		tools:text="@string/cancel"
		android:textColor="@android:color/black" />


</RelativeLayout>