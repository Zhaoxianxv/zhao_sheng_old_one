<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin_3dp"
    android:background="@color/white"
    android:id="@+id/check_tj_group"
    android:gravity="center_vertical">
    <RelativeLayout

        android:id="@+id/check_tj_tag"
        android:background="@color/White"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5dp"
        android:paddingTop="@dimen/margin_5dp"
        android:paddingBottom="@dimen/margin_5dp"
        >
        <ImageView
            android:id="@+id/check_tj_head"
            android:layout_width="@dimen/margin_50dp"
            android:layout_height="@dimen/margin_50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:src="@drawable/oval_gray"
            android:layout_marginLeft="@dimen/margin_10dp"
            />
        <TextView
            android:id="@+id/check_tj_user_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_toRightOf="@id/check_tj_head"
            android:textSize="@dimen/textsize9"
            android:textStyle="bold"/>
        <android.support.design.internal.FlowLayout
            android:id="@+id/check_tj_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@id/check_tj_user_class"
            app:itemSpacing="5dp"
            app:lineSpacing="3dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:foregroundGravity="center"
            />


        <android.support.design.internal.FlowLayout
            android:id="@+id/check_tj_state_flow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/check_class_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_10dp"
            app:itemSpacing="10dp"
            app:lineSpacing="3dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:foregroundGravity="center" />

    </RelativeLayout>


    <android.support.design.internal.FlowLayout
        android:id="@+id/check_tj_ill_flow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_5dp"
        android:layout_marginRight="@dimen/margin_5dp"
        app:itemSpacing="10dp"
        android:layout_below="@id/check_tj_tag"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />




</RelativeLayout>
