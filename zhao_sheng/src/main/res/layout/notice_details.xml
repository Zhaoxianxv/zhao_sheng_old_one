<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.yfy.view.SQToolBar  style="@style/App_SQToolbar"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/notice_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/app_base_color"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/margin_20dp"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:text="s"
                android:textSize="@dimen/textsize11" />

            <TextView
                android:id="@+id/notice_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:paddingRight="@dimen/margin_10dp"
                android:gravity="right"
                android:textSelectHandleRight="@dimen/textsize6"
                android:textColor="@color/gray_text"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:text="sss" />

            <TextView
                android:id="@+id/notice_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:layout_marginRight="@dimen/margin_5dp"
                android:layout_marginTop="2dp"
                android:focusable="true"
                android:isScrollContainer="true"
                android:textSize="@dimen/textsize9"
                android:text="ssssdd" />
            <com.yfy.view.multi.MultiPictureView
                android:id="@+id/notice_icon_gallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:layout_marginRight="@dimen/margin_5dp"
                android:layout_marginBottom="@dimen/margin_5dp"
                app:imageLayoutMode="STATIC"
                app:max="9"
                app:ratio="1"
                app:space="6dp"
                app:span="5"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_0.5dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:layout_marginRight="@dimen/margin_5dp"
                android:background="@color/gray"/>

            <ImageView
                android:id="@+id/read_state_tag"
                android:layout_width="@dimen/margin_45dp"
                android:layout_height="@dimen/margin_45dp"
                app:srcCompat="@drawable/ic_import_contacts_green_24dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginBottom="@dimen/margin_10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:textSize="@dimen/textsize5"
                android:text=""
                />

        </LinearLayout>
    </ScrollView>


</LinearLayout>