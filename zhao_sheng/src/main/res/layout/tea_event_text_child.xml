<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/tea_event_text_layout"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tea_event_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/margin_50dp"
        android:hint="@string/ok"
        android:textSize="@dimen/textsize6"
        android:paddingLeft="@dimen/margin_10dp"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/margin_30dp"
        />
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/tea_event_text_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_check_black_24dp"
        app:tint="@color/RoyalBlue"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_5dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5dp"
        android:background="@color/b3_gray"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_alignParentTop="true"/>
</RelativeLayout>