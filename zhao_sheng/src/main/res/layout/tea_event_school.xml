<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:minHeight="@dimen/margin_60dp">


    <com.yfy.view.MySpinner
        android:id="@+id/tea_school_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/margin_90dp"
        android:gravity="center"
        android:paddingLeft="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_10dp"
        android:paddingTop="@dimen/margin_5dp"
        android:paddingBottom="@dimen/margin_5dp"

        android:layout_alignParentRight="true"
        android:background="@drawable/radius3_whitebg_basecolorline"
        android:layout_marginRight="@dimen/margin_20dp"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tea_school_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tea_school_state"
        android:layout_marginRight="@dimen/margin_10dp"
        tools:text="sads"
        android:textSize="@dimen/textsize9"
        android:layout_marginLeft="@dimen/margin_10dp"/>
</RelativeLayout>