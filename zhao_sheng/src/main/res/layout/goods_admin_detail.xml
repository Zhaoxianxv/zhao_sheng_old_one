<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/WhiteSmoke"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <com.yfy.view.SQToolBar style="@style/App_SQToolbar"/>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/public_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_45dp"
        android:layout_marginTop="@dimen/margin_45dp">

    </android.support.v7.widget.RecyclerView>


    <RelativeLayout
        android:id="@+id/goods_admin_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_45dp"
        android:layout_alignParentBottom="true"

        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="流程结束"
            android:gravity="center"
            android:textColor="@color/gray_text"
            />
        <TextView
            android:id="@+id/goods_admin_do"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:backgroundTint="@color/Green"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_marginRight="@dimen/margin_20dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:gravity="center"
            android:text="处理申请"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize7"
            android:background="@drawable/radius5_white"
            />
    </RelativeLayout>

</RelativeLayout>
