<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/honor_stu_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:text="ss"
                android:textSize="@dimen/textsize8"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/honor_stu_item_get_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="shijian"
                android:textSize="@dimen/textsize5"
                android:layout_alignParentRight="true"
                android:textColor="@color/gray"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/honor_stu_item_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize5"
                android:text="jibie"
                android:layout_alignParentRight="true"
                android:textColor="@color/gray"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/honor_stu_item_add_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="util"
                android:textStyle="italic"
                android:textSize="@dimen/textsize5"
                android:textColor="@color/gray"
                android:gravity="center_vertical"/>

        </LinearLayout>
        <TextView
            android:id="@+id/honor_stu_item_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textColor="@color/DarkSlateBlue"
            android:textSize="@dimen/textsize5"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_20dp"
            android:layout_marginTop="@dimen/margin_15dp"
            />
    </RelativeLayout>



    <TextView
        android:id="@+id/honor_stu_item_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_5dp"
        android:text="内容"
        android:layout_width="match_parent"
        android:textSize="@dimen/textsize7"
        android:textColor="@color/public_color66"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/honor_stu_item_pic"
        android:layout_width="150dp"
        android:layout_height="@dimen/margin_150dp"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_marginBottom="@dimen/margin_3dp"
        android:scaleType="centerCrop"/>

</LinearLayout>