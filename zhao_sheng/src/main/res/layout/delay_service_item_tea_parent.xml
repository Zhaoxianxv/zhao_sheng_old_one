<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_10dp"
    android:background="@drawable/layer_top_bottom_grayline_whitebg"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/layout_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_10dp"
        android:paddingTop="@dimen/margin_10dp"
        >
        <ImageView
            android:id="@+id/event_detail_head"
            android:layout_width="@dimen/margin_50dp"
            android:layout_height="@dimen/margin_50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"/>
        <TextView
            android:id="@+id/event_detail_stu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_toRightOf="@id/event_detail_head"
            android:textSize="@dimen/textsize7"/>
        <TextView
            android:id="@+id/event_detail_stu_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="phone"
            android:layout_below="@id/event_detail_stu_name"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:textColor="@color/app_base_color"
            android:layout_toRightOf="@id/event_detail_head"
            android:textSize="@dimen/textsize7"/>
        <TextView
            android:id="@+id/event_detail_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/margin_20dp"
            android:text="2017-11-11"
            android:gravity="center"
            android:textColor="@color/gray"
            android:textSize="@dimen/textsize5"/>



    </RelativeLayout>
    <TextView
        android:id="@+id/event_class_name"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:gravity="center_vertical"
        android:layout_below="@id/layout_tag"
        android:text="class"
        />
    <TextView
        android:id="@+id/event_class_two"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:gravity="center_vertical"
        android:layout_below="@id/event_class_name"
        android:text="class"
        />
</RelativeLayout>