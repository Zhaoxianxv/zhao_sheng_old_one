<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/WhiteSmoke">

    <com.yfy.view.SQToolBar style="@style/App_SQToolbar"/>

    <RelativeLayout
        android:id="@+id/check_tj_main_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/check_tj_main_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="@dimen/textsize9"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/Maroon"
            android:backgroundTint="@color/app_base_color"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:text="统计"/>

        <android.support.design.internal.FlowLayout
            android:id="@+id/check_tj_ill_flow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_5dp"
            app:itemSpacing="10dp"
            android:visibility="gone"
            android:layout_below="@id/check_tj_main_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/public_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_45dp"
        android:layout_marginTop="@dimen/margin_45dp"
      >
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>

