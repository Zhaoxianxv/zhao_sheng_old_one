<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_5dp"
    app:cardElevation="@dimen/margin_2dp"
    app:cardCornerRadius="@dimen/margin_5dp"
    android:layout_marginTop="@dimen/margin_5dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/shape_item_group_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin_10dp"
            android:paddingRight="@dimen/margin_10dp"
            android:paddingTop="@dimen/margin_10dp" >

            <ImageView
                android:id="@+id/shape_item_head"
                android:layout_width="@dimen/margin_50dp"
                android:layout_height="@dimen/margin_50dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/oval_gray"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/shape_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="name"
                    android:textColor="#444444" />

                <TextView
                    android:id="@+id/shape_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:text="time"
                    android:textColor="@color/a3_gray" />
            </LinearLayout>

            <TextView
                android:id="@+id/shape_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_bg_solid"
                android:textColor="@color/white"
                android:padding="@dimen/margin_3dp"
                android:text="学习分享"/>

        </LinearLayout>
        <TextView
            android:id="@+id/shape_item_content"
            android:textIsSelectable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_40dp"
            android:padding="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#444444" />
        <com.yfy.view.multi.MultiPictureView
            android:id="@+id/shape_main_item_mult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_5dp"
            app:imageLayoutMode="STATIC"
            app:max="9"
            app:ratio="1"
            app:space="6dp"
            app:span="3"
            />
        <TextView
            android:id="@+id/shape_itemt_who_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="@dimen/margin_2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:drawableLeft="@drawable/shape_who_praise"
            android:drawablePadding="@dimen/margin_10dp"
            android:textColor="@color/blue" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"/>
        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="10dp"

            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/shape_item_praise"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_20dp"
                android:contentDescription="@string/app_name"
                android:duplicateParentState="false"
                android:src="@drawable/shape_praise" />

            <View
                android:layout_width="0.5dp"

                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:background="@color/gray"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/shape_itemt_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:contentDescription="@string/app_name"
                    android:drawableLeft="@drawable/shape_commtent"
                    android:drawablePadding="@dimen/margin_3dp"
                    android:text="1"/>
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>