<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/contacts_child_layout"
	android:layout_width="match_parent"
	android:background="@color/Gainsboro"
	android:layout_height="45dp">

	<android.support.v7.widget.AppCompatImageView
		android:id="@+id/contacts_head"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_centerVertical="true"
		android:src="@drawable/order_user_name"
		android:layout_marginLeft="10dp"
		android:contentDescription="@string/app_name"
		tools:ignore="VectorDrawableCompat" />

	<TextView
		android:id="@+id/contacts_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginLeft="10dp"
		android:layout_toRightOf="@id/contacts_head"
		android:singleLine="true"
		tools:text="taobao"
		android:textColor="@android:color/black"
		android:textSize="14sp" />

	<android.support.v7.widget.AppCompatImageView
		android:id="@+id/contacts_check_box"
		android:layout_width="@dimen/margin_45dp"
		android:layout_height="match_parent"
		android:layout_alignParentRight="true"
		android:scaleType="center"
		android:src="@drawable/ic_stat"
		android:tint="@color/base_color"
		android:layout_centerInParent="true"
		/>
</RelativeLayout>