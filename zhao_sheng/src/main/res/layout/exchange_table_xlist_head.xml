<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:minHeight="@dimen/margin_35dp"
        android:background="@color/White"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="match_parent"
            android:text=""
            android:layout_weight="1"
            android:textColor="@color/base_color"
            android:background="@color/exchange_able_1"
            android:gravity="center"/>
        <TextView
            android:id="@+id/exchange_table_1"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_1dp"
            android:text="1"
            android:layout_weight="3"
            android:textSize="@dimen/textsize4"
            android:textColor="@color/WhiteSmoke"
            android:background="@color/exchange_able_2"
            android:gravity="center"/>
        <TextView
            android:id="@+id/exchange_table_2"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="match_parent"
            android:text="2"
            android:layout_weight="3"
            android:textSize="@dimen/textsize4"
            android:layout_marginLeft="@dimen/margin_1dp"
            android:textColor="@color/WhiteSmoke"
            android:background="@color/exchange_able_3"
            android:gravity="center"/>
        <TextView
            android:id="@+id/exchange_table_3"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_1dp"
            android:text="3"
            android:layout_weight="3"
            android:textSize="@dimen/textsize4"
            android:textColor="@color/WhiteSmoke"
            android:background="@color/exchange_able_4"
            android:gravity="center"/>
        <TextView
            android:id="@+id/exchange_table_4"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_1dp"
            android:text="4"
            android:layout_weight="3"
            android:textSize="@dimen/textsize4"
            android:textColor="@color/WhiteSmoke"
            android:background="@color/exchange_able_5"
            android:gravity="center"/>
        <TextView
            android:id="@+id/exchange_table_5"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="match_parent"
            android:text="5"
            android:background="@color/exchange_able_6"
            android:layout_marginLeft="@dimen/margin_1dp"
            android:layout_weight="3"
            android:textSize="@dimen/textsize4"
            android:textColor="@color/WhiteSmoke"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>