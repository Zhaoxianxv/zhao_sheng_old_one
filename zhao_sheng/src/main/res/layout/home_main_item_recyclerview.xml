<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_main_item_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="@dimen/margin_3dp"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/home_item_project_icon"
            android:layout_width="@dimen/margin_50dp"
            android:layout_height="@dimen/margin_50dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/margin_10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/school_news" />

        <TextView
            android:id="@+id/home_item_project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:textColor="@color/DimGray"
            android:layout_marginBottom="@dimen/margin_3dp"
            android:gravity="center" />
    </LinearLayout>

    <TextView
        android:id="@+id/home_item_project_dot"
        android:layout_width="@dimen/margin_15dp"
        android:layout_height="@dimen/margin_15dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_3dp"
        android:background="@drawable/shape_block_round"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textsize5"
        />

</RelativeLayout>