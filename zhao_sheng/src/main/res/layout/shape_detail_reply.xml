<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray01">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_10dp"
        android:paddingLeft="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_10dp"
        android:paddingTop="@dimen/margin_10dp" >

        <ImageView
            android:id="@+id/detail_reply_headPic"
            android:layout_width="@dimen/margin_50dp"
            android:layout_height="@dimen/margin_50dp"
            android:contentDescription="@string/app_name"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/detail_reply_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="name"
                    android:textColor="#444444" />
                <TextView
                    android:id="@+id/detail_reply_name_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_alignParentRight="true"
                    android:text="name"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:textColor="#444444" />
            </RelativeLayout>

            <TextView
                android:id="@+id/detail_reply_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="time"
                android:textColor="@color/a3_gray" />
        </LinearLayout>



    </LinearLayout>
    <TextView
        android:id="@+id/detail_reply_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_70dp"
        android:layout_marginRight="@dimen/margin_20dp"
        android:text="sss"/>
    <TextView
        android:id="@+id/detail_reply_content_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_70dp"
        android:layout_marginRight="@dimen/margin_20dp"
        android:background="@color/c3_gray"
        android:textColor="@color/blue"
        android:paddingLeft="@dimen/margin_10dp"
        android:visibility="gone"
        android:text=">"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_10dp"/>
</LinearLayout>