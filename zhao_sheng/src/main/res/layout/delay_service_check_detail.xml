<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/WhiteSmoke"
    android:layout_height="match_parent">

    <com.yfy.view.SQToolBar style="@style/App_SQToolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@drawable/layer_top_bottom_grayline_whitebg"
        >
        <RelativeLayout
            android:id="@+id/layout_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_10dp"
            android:paddingTop="@dimen/margin_10dp"
            >
            <ImageView
                android:id="@+id/event_detail_head"
                android:layout_width="@dimen/margin_50dp"
                android:layout_height="@dimen/margin_50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"/>
            <TextView
                android:id="@+id/event_detail_stu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_toRightOf="@id/event_detail_head"
                android:textSize="@dimen/textsize7"/>
            <TextView
                android:id="@+id/event_detail_stu_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="phone"
                android:layout_below="@id/event_detail_stu_name"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:textColor="@color/MediumBlue"
                android:layout_toRightOf="@id/event_detail_head"
                android:textSize="@dimen/textsize7"/>
            <TextView
                android:id="@+id/event_detail_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/margin_20dp"
                android:text="2017-11-11"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsize5"/>



        </RelativeLayout>
        <TextView
            android:id="@+id/event_class_name"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:gravity="center_vertical"
            android:layout_below="@id/layout_tag"
            android:text="class"
            />
        <TextView
            android:id="@+id/event_check_one"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:gravity="center_vertical"
            android:layout_below="@id/event_class_name"
            android:text="class"
            />
        <TextView
            android:id="@+id/event_check_two"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:gravity="center_vertical"
            android:layout_below="@id/event_check_one"
            android:text="class"
            />
        <TextView
            android:id="@+id/event_check_three"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:gravity="center_vertical"
            android:textColor="@color/MediumBlue"
            android:layout_below="@id/event_check_two"
            android:text="class"
            />
        <TextView
            android:id="@+id/event_check_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="44dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:gravity="center_vertical"
            android:layout_below="@id/event_check_three"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:text="class"
            />
        <com.yfy.view.multi.MultiPictureView
            android:id="@+id/event_detail_show_multi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_below="@id/event_check_four"
            app:imageLayoutMode="STATIC"
            app:max="9"
            app:ratio="1"
            app:space="6dp"
            app:span="5"
            />
    </RelativeLayout>





</LinearLayout>