<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bottom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <com.yfy.view.button.DefaultBottomItem
        android:id="@+id/exchange_bottom_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/margin_0dp"
        android:layout_marginRight="@dimen/margin_0dp"
        android:background="@android:color/transparent"
        bottom:normalRes="@mipmap/exchange_main_1_red"
        bottom:pressRes="@mipmap/exchange_main_1_red"

        >
        <include layout="@layout/exchange_include_bottom_default"
            />
    </com.yfy.view.button.DefaultBottomItem>

    <com.yfy.view.button.DefaultBottomItem
        android:id="@+id/exchange_bottom_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/margin_0dp"
        android:layout_marginRight="@dimen/margin_0dp"
        android:background="@android:color/transparent"
        bottom:normalRes="@mipmap/exchange_main_2_red"
        bottom:pressRes="@mipmap/exchange_main_2_red"
        >
        <include layout="@layout/exchange_include_bottom_default" />
    </com.yfy.view.button.DefaultBottomItem>


    <com.yfy.view.button.DefaultBottomItem
        android:id="@+id/exchange_bottom_3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/margin_0dp"
        android:layout_marginRight="@dimen/margin_0dp"
        android:background="@android:color/transparent"
        bottom:normalRes="@mipmap/exchange_main_3_red"
        bottom:pressRes="@mipmap/exchange_main_3_red"
        >
        <include layout="@layout/exchange_include_bottom_default" />
    </com.yfy.view.button.DefaultBottomItem>





</LinearLayout>
