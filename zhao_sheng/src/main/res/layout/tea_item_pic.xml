<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_marginTop="@dimen/margin_10dp">
    <TextView
        android:id="@+id/tea_icon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:text="图片"
        android:layout_marginLeft="@dimen/margin_10dp"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tea_icon_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_toLeftOf="@id/tea_icon_name"
        android:text=""
        app:autoSizeTextType="uniform"
        android:textSize="@dimen/textsize7"
        />

    <com.yfy.view.multi.MultiPictureView
        android:id="@+id/tea_add_mult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_45dp"
        android:layout_marginBottom="@dimen/margin_10dp"
        app:editable="true"
        app:max="9"
        app:ratio="1"
        app:space="2dp"
        app:span="4" />
</RelativeLayout>

