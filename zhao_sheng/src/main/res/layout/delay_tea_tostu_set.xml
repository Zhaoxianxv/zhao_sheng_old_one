<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteSmoke"
    android:orientation="vertical" >

    <com.yfy.view.SQToolBar style="@style/App_SQToolbar"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:padding="@dimen/margin_1dp"
                android:background="@drawable/layer_top_bottom_grayline_whitebg"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:textColor="@color/gray"
                    android:text="考评对象：" />
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/delay_tea_to_stu_set_user"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:padding="10dp"
                    android:text="@string/exa_date"
                    android:textColor="@color/gray"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_gray_24dp"
                    android:drawablePadding="@dimen/margin_10dp"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:padding="@dimen/margin_1dp"
                android:background="@drawable/layer_top_bottom_grayline_whitebg"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:textColor="@color/gray"
                    android:text="考评时间：" />
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/delay_tea_to_stu_set_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:padding="10dp"
                    android:text="@string/exa_date"
                    android:textColor="@color/gray"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_gray_24dp"
                    android:drawablePadding="@dimen/margin_10dp"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:padding="@dimen/margin_1dp"
                android:background="@drawable/layer_top_bottom_grayline_whitebg">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_25dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:text="考评类型"
                    android:textStyle="bold"
                    />
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/delay_tea_to_stu_set_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:padding="10dp"
                    android:text="@string/please_choose"
                    android:textColor="@color/gray"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_gray_24dp"
                    android:drawablePadding="@dimen/margin_10dp"
                    android:layout_alignParentRight="true"/>


            </RelativeLayout>
            <RelativeLayout
                android:background="@drawable/layer_top_bottom_grayline_whitebg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp">
                <EditText
                    android:id="@+id/delay_tea_to_stu_set_reason_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="start"
                    android:layout_marginBottom="@dimen/margin_2dp"
                    android:hint="考评备注"
                    android:minHeight="80dp"
                    android:textSize="@dimen/textsize9"
                    android:padding="5dp" />

                <com.yfy.view.multi.MultiPictureView
                    android:id="@+id/delay_tea_to_stu_set_multi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:layout_marginBottom="@dimen/margin_5dp"
                    android:layout_below="@id/delay_tea_to_stu_set_reason_edit"
                    app:editable="true"
                    app:max="9"
                    app:ratio="1"
                    app:space="2dp"
                    app:span="4" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>