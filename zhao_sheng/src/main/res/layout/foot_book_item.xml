<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/margin_5dp"
    android:paddingLeft="@dimen/margin_10dp"
    android:paddingRight="@dimen/margin_10dp">



    <ImageView
        android:id="@+id/foot_image"
        android:layout_width="@dimen/margin_80dp"
        android:layout_height="@dimen/margin_80dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"

        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_80dp"
        android:layout_toRightOf="@id/foot_image"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_centerVertical="true"
        >
        <TextView
            android:text="x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/foot_title"
            android:layout_marginTop="@dimen/margin_3dp"
            android:textSize="@dimen/textsize8"
            android:singleLine="true"
            />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/foot_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/gray_text"
            android:layout_marginTop="@dimen/margin_2dp"
            android:textSize="@dimen/textsize5"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/foot_image"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/foot_ispriase"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/graded_dynamic_praise_selected"/>
        <TextView
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foot_reting"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/textsize5"/>
    </LinearLayout>

</RelativeLayout>