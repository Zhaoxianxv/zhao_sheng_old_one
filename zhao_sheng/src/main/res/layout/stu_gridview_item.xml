<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/margin_100dp"
    android:background="@color/WhiteSmoke"
    android:id="@+id/stu_grid_layout"

    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/stu_grid_head"
            android:layout_width="@dimen/margin_50dp"
            android:layout_height="@dimen/margin_50dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/radius_oval_gray"/>

        <TextView
            android:id="@+id/stu_grid_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stu_grid_head"
            android:textSize="@dimen/textsize5"
            android:layout_centerHorizontal="true"
            tools:text="张三李四"
            />
        <TextView
            android:id="@+id/stu_grid_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stu_grid_name"
            android:textSize="@dimen/textsize3"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            tools:text="张三李四"
            />
    </RelativeLayout>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/stu_grid_select"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_15dp"
        android:background="#880016ff"
        android:visibility="gone"
        app:tint="@color/white"
        app:srcCompat="@drawable/vector_done_red_24dp"
        android:layout_alignParentRight="true"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5dp"
        android:background="@color/Gainsboro"
        android:layout_alignParentBottom="true"
        />
    <View
        android:layout_width="@dimen/margin_0.5dp"
        android:layout_height="match_parent"
        android:background="@color/Gainsboro"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
