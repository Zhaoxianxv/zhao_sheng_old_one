<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/f3_gray"
    android:orientation="vertical" >

    <com.yfy.view.SQToolBar style="@style/App_SQToolbar"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/f3_gray"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/layer_top_bottom_grayline_whitebg"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:textColor="@color/gray"
                    android:text="考评班级：" />
                <TextView
                    android:id="@+id/delay_admin_to_tea_event_class_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="【星期二】一年纪托管4班第一姐"
                    android:textSize="@dimen/textsize7"
                    android:paddingLeft="@dimen/margin_70dp"
                    android:textColor="@color/gray"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_gray_24dp"
                    android:drawablePadding="@dimen/margin_5dp"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/layer_top_bottom_grayline_whitebg"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:textColor="@color/gray"
                    android:text="考评时间：" />
                <TextView
                    android:id="@+id/delay_admin_to_tea_event_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:padding="10dp"
                    android:text="@string/exa_date"
                    android:textColor="@color/gray"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_gray_24dp"
                    android:drawablePadding="@dimen/margin_10dp"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/layer_top_bottom_grayline_whitebg"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:textColor="@color/gray"
                    android:text="考评教室：" />
                <TextView
                    android:id="@+id/delay_admin_to_tea_event_site"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="@color/gray"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_gray_24dp"
                    android:drawablePadding="@dimen/margin_10dp"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/layer_top_bottom_grayline_whitebg"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:textColor="@color/gray"
                    android:text="任课教师：" />
                <TextView
                    android:id="@+id/delay_admin_to_tea_event_tea_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:padding="10dp"
                    android:text="请选择"
                    android:textColor="@color/gray"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_gray_24dp"
                    android:drawablePadding="@dimen/margin_10dp"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/delay_admin_to_tea_event_replace_tea_layout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                android:background="@drawable/layer_top_bottom_grayline_whitebg"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:textColor="@color/gray"
                    android:text="代课教师：" />
                <TextView
                    android:id="@+id/delay_admin_to_tea_event_replace_tea"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:padding="10dp"
                    android:text="无"
                    android:textColor="@color/gray"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_gray_24dp"
                    android:drawablePadding="@dimen/margin_10dp"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>




            <RelativeLayout
                android:background="@drawable/layer_top_bottom_grayline_whitebg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp">
                <EditText
                    android:id="@+id/delay_admin_to_tea_event_num_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center_vertical|right"
                    android:layout_marginBottom="@dimen/margin_2dp"
                    android:hint="点击输入实到学生数量"
                    android:inputType="number"
                    android:paddingRight="@dimen/margin_10dp"
                    android:minHeight="43dp"
                    android:textSize="@dimen/textsize7"
                    android:layout_marginLeft="@dimen/margin_80dp"
                    android:layout_marginTop="@dimen/margin_1dp"
                    android:layout_marginRight="@dimen/margin_1dp"
                    android:imeOptions="actionDone"
                    android:paddingLeft="@dimen/margin_10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:text="实到人数："
                    android:textStyle="bold"
                    />


            </RelativeLayout>
            <RelativeLayout
                android:background="@drawable/layer_top_bottom_grayline_whitebg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp">



                <EditText
                    android:id="@+id/delay_admin_to_tea_event_reason_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="start"
                    android:layout_marginBottom="@dimen/margin_2dp"
                    android:hint="考评备注"
                    android:minHeight="80dp"
                    android:textSize="@dimen/textsize9"
                    android:padding="5dp" />

                <com.yfy.view.multi.MultiPictureView
                    android:id="@+id/delay_admin_to_tea_event_multi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:layout_marginBottom="@dimen/margin_5dp"
                    android:layout_below="@id/delay_admin_to_tea_event_reason_edit"
                    app:editable="true"
                    app:max="9"
                    app:ratio="1"
                    app:space="2dp"
                    app:span="4" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/delay_admin_to_tea_event_type_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@drawable/layer_top_bottom_grayline_whitebg"
                android:minHeight="@dimen/margin_45dp">
                <TextView
                    android:id="@+id/delay_admin_to_tea_event_type_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_25dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:text="考评类型"
                    android:textStyle="bold"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/delay_admin_to_tea_event_type_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/delay_admin_to_tea_event_type_tag"
                    >

                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>