<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注明：培训机构发证不作登记，考级证书不作登记"
        android:textColor="@color/main_red"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_3dp"
        android:layout_marginTop="@dimen/margin_3dp"
        />
    <TextView
        android:id="@+id/public_center_txt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_45dp"
        android:gravity="center"
        android:textSize="@dimen/textsize11"
        android:textColor="@color/app_base_text_color"
        android:paddingLeft="20dp"
        android:drawableRight="@drawable/app_setting_icon"
        android:background="@color/WhiteSmoke"
        android:paddingRight="@dimen/margin_20dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_15dp"
        android:background="#dedede"/>
</LinearLayout>