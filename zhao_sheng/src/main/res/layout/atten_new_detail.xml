<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/ee_gray"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/maintiain_detail_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50dp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_5dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/detail_item_choice"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="转交维修"
            android:gravity="center"
            android:layout_marginRight="@dimen/margin_20dp"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_marginTop="@dimen/margin_3dp"
            android:layout_marginBottom="@dimen/margin_3dp"
            android:textColor="@android:color/holo_orange_dark"/>



        <Button
            android:id="@+id/detail_item_yes"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="处理维修"
            android:layout_marginRight="@dimen/margin_20dp"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_marginTop="@dimen/margin_3dp"
            android:layout_marginBottom="@dimen/margin_3dp"
            android:gravity="center"

            android:textColor="@android:color/holo_green_dark"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/maintiain_detail_bottom"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
        <com.yfy.view.SQToolBar style="@style/App_SQToolbar"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/d3_gray"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/maintiain_detail_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ee_gray"
            android:scrollbars="none"
            />
    </LinearLayout>




</RelativeLayout>


