<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/White"
    android:id="@+id/delay_master_class_layout"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/delay_master_class_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40dp"
        android:gravity="center_vertical|left"
        android:textSize="@dimen/textsize9"
        android:textColor="@color/Black"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:text="sssss"
        />
    <TextView
        android:id="@+id/master_class_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:textSize="@dimen/textsize6"
        android:textColor="@color/Black"
        android:layout_below="@id/delay_master_class_name"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/margin_3dp"
        android:paddingLeft="20dp"
        android:text="sssss"
        />
    <TextView
        android:id="@+id/delay_all_num"
        android:text="应道人"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_10dp"
        android:textColor="@color/ForestGreen"
        android:layout_marginTop="@dimen/margin_8dp"
        android:textSize="@dimen/textsize5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/delay_abs_num"
        android:text="实到"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/textsize5"
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_below="@id/delay_all_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/delay_abs_tag"
        android:text="实到"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/textsize5"
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_marginBottom="@dimen/margin_5dp"
        android:layout_below="@id/delay_abs_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <android.support.design.internal.FlowLayout
        android:id="@+id/master_class_tea_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/master_class_name"
        android:paddingLeft="@dimen/margin_10dp"
        >

    </android.support.design.internal.FlowLayout>
    <View
        android:background="@color/Gainsboro"
        android:layout_marginBottom="@dimen/margin_1dp"
        android:layout_width="match_parent"
        android:layout_below="@id/master_class_tea_list"
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_height="@dimen/margin_0.5dp"/>
</RelativeLayout>