<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/WhiteSmoke"
    android:layout_height="match_parent">

    <com.yfy.view.SQToolBar style="@style/App_SQToolbar"/>

    <RelativeLayout

        android:background="@color/White"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5dp"
        android:paddingTop="@dimen/margin_5dp"
        android:paddingBottom="@dimen/margin_5dp"
        >
        <ImageView
            android:id="@+id/good_num_item_head"
            android:layout_width="@dimen/margin_50dp"
            android:layout_height="@dimen/margin_50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:src="@drawable/oval_gray"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"/>
        <TextView
            android:id="@+id/good_num_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_toRightOf="@id/good_num_item_head"
            android:textSize="@dimen/textsize7"/>
        <TextView
            android:id="@+id/good_num_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_20dp"
            android:text="2017-11-11"
            android:gravity="center"
            android:textColor="@color/gray"
            android:textSize="@dimen/textsize5"/>
        <TextView
            android:id="@+id/good_num_item_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/good_num_item_time"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_marginRight="@dimen/margin_20dp"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textSize="@dimen/textsize5"/>




    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
</LinearLayout>