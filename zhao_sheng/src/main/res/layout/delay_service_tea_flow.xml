<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/margin_3dp"
    android:paddingTop="@dimen/margin_3dp"
    android:id="@+id/event_tea_name_layout"
    android:background="@drawable/layer_top_gray"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/event_tea_head"
        android:layout_width="@dimen/margin_50dp"
        android:layout_height="@dimen/margin_50dp"
        android:layout_marginLeft="@dimen/margin_5dp"
        android:src="@drawable/user"/>
    <TextView
        android:id="@+id/event_tea_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tea"
        android:textColor="@color/DarkGray"
        android:textStyle="bold"
        android:layout_toRightOf="@id/event_tea_head"
        android:layout_marginLeft="@dimen/margin_5dp"
        android:layout_marginTop="@dimen/margin_3dp"/>
    <TextView
        android:id="@+id/event_tea_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13708056894"
        android:textColor="@color/app_base_color"
        android:textSize="@dimen/textsize7"
        android:padding="@dimen/margin_3dp"
        android:layout_toRightOf="@id/event_tea_name"
        android:layout_marginLeft="@dimen/margin_5dp"
        />

    <TextView
        android:id="@+id/event_tea_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="总数:34"
        android:layout_below="@id/event_tea_name"
        android:layout_toRightOf="@id/event_tea_head"
        android:layout_marginLeft="@dimen/margin_5dp"
        android:layout_marginTop="@dimen/margin_3dp"
        android:padding="@dimen/margin_3dp"
        android:textColor="@color/canlendar_text_color"
        />
    <TextView
        android:id="@+id/event_tea_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="总数:34"
        android:layout_below="@id/event_tea_name"
        android:layout_toRightOf="@id/event_tea_one"
        android:layout_marginLeft="@dimen/margin_5dp"
        android:layout_marginTop="@dimen/margin_3dp"
        android:padding="@dimen/margin_3dp"
        android:textColor="@color/ForestGreen"
        />
    <TextView
        android:id="@+id/event_tea_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="巡查:34"
        android:layout_below="@id/event_tea_name"
        android:layout_toRightOf="@id/event_tea_two"
        android:layout_marginLeft="@dimen/margin_5dp"
        android:layout_marginTop="@dimen/margin_3dp"
        android:padding="@dimen/margin_3dp"
        android:textColor="@color/Maroon"
        />
</RelativeLayout>