<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:id="@+id/event_alter_layout"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tag_item_txt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40dp"
        android:gravity="center_vertical|left"
        android:textSize="@dimen/textsize9"
        android:textColor="@color/Black"

        android:paddingLeft="20dp"
        android:text="sssss"
        />
    <TextView
        android:id="@+id/tag_item_adr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:textSize="@dimen/textsize6"
        android:textColor="@color/Black"
        android:layout_below="@id/tag_item_txt"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:text="sssss"
        />
    <TextView
        android:id="@+id/tag_item_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/radius5_white"
        android:text="复制打分"
        android:textSize="@dimen/textsize7"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_10dp"
        android:backgroundTint="@color/red"
        android:paddingBottom="@dimen/margin_5dp"
        android:paddingTop="@dimen/margin_5dp"
        android:paddingRight="@dimen/margin_10dp"
        android:paddingLeft="@dimen/margin_10dp"
        android:textColor="@color/white"/>
</RelativeLayout>