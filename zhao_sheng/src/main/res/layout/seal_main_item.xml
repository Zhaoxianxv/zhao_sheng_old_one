<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/maintain_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/seal_main_item_head"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/seal_main_item_head"
        android:layout_marginLeft="@dimen/margin_3dp"
        android:layout_marginTop="@dimen/margin_3dp"
        android:layout_marginBottom="@dimen/margin_3dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/seal_main_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp"
            android:textSize="@dimen/textsize9"
            android:textColor="#3a3a3a"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="报修地点"/>
        <TextView
            android:id="@+id/seal_main_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize7"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="维修状态"/>
        <TextView
            android:id="@+id/seal_main_item_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize7"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:text="维修状态"/>
    </LinearLayout>
    <TextView
        android:id="@+id/seal_main_item_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_20dp"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/textsize5"
        android:text="2017-11-11"/>
    <TextView
        android:id="@+id/seal_main_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_20dp"
        android:textColor="@color/dark_gray"
        android:layout_below="@id/seal_main_item_state"
        android:textSize="@dimen/textsize5"
        android:text="11"/>

</RelativeLayout>