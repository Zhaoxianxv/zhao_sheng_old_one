<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/award_list_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017"
            android:maxWidth="@dimen/margin_50dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:textSize="@dimen/textsize11"
            android:textStyle="bold|italic"
            />
        <TextView
            android:id="@+id/award_list_time_txt_moth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4-24"
            android:maxWidth="@dimen/margin_50dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:textSize="@dimen/textsize7"
            android:layout_marginRight="@dimen/margin_10dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="@dimen/margin_15dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_3dp"
        >
        <View
            android:layout_width="@dimen/margin_3dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/white"/>
        <ImageView
            android:layout_width="@dimen/margin_15dp"
            android:layout_height="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_30dp"
            android:background="@drawable/award_cricle_color_gray"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/award_content_dialog_bg"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/award_childs_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sss"/>
            <View
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/award_childs_admin_user_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/margin_5dp"
                android:text="sss"
                android:drawableRight="@drawable/radio_gray_cry"
                />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1dp"
            android:layout_marginTop="@dimen/margin_3dp"
            android:background="@color/ee_gray"/>
        <TextView
            android:id="@+id/award_child_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_3dp"
            android:layout_margin="@dimen/margin_5dp"
            android:text=""/>


        <com.yfy.view.multi.MultiPictureView
            android:id="@+id/award_child_mult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_3dp"
            android:layout_marginRight="@dimen/margin_3dp"
            app:imageLayoutMode="STATIC"
            app:max="5"
            app:ratio="1"
            app:space="2dp"
            app:span="4"
            />
    </LinearLayout>
</LinearLayout>