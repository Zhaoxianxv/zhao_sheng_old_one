<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yfy.view.SQToolBar style="@style/App_SQToolbar"/>
    <!--<include layout="@layout/include_head3" />-->

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_3dp"
      />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/f3_gray"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="@string/notice_read_tips"
            android:drawableLeft="@drawable/notice_receipt_yes"
            android:paddingLeft="@dimen/margin_5dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="@string/notice_unread_tips"
            android:drawableLeft="@drawable/notice_receipt_no"
            android:paddingLeft="@dimen/margin_5dp"

            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/d3_gray" />

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:horizontalSpacing="15dp"
        android:numColumns="4"
        android:padding="10dp"
        android:verticalSpacing="15dp" >
    </GridView>

</LinearLayout>