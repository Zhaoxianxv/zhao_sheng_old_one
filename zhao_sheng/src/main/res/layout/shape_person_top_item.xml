<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="30dp">


    <ImageView
        android:id="@+id/top_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/share_detail"/>

    <TextView
        android:id="@+id/shape_top_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_50dp"
        android:textSize="@dimen/textsize9"
        android:text="@string/title"
        android:layout_gravity="center"
        android:gravity="center"/>

    <TextView
        android:id="@+id/shape_top_reply"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="评论：0"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_20dp"

        android:gravity="center"/>
    <TextView
        android:id="@+id/shape_top_send"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="发帖：0"
        android:layout_marginRight="@dimen/margin_20dp"
        android:layout_toLeftOf="@id/shape_top_reply"
        android:gravity="center"/>

</RelativeLayout>