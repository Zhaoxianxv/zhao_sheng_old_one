<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/check_add_parent_tag"
            android:background="@color/White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp"
            android:paddingTop="@dimen/margin_10dp"
            android:paddingBottom="@dimen/margin_10dp"
            >
            <ImageView
                android:id="@+id/check_user_head"
                android:layout_width="@dimen/margin_50dp"
                android:layout_height="@dimen/margin_50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:src="@drawable/oval_gray"
                android:layout_marginLeft="@dimen/margin_10dp"
                />
            <TextView
                android:id="@+id/check_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_toRightOf="@id/check_user_head"
                android:textSize="@dimen/textsize7"/>
            <TextView
                android:id="@+id/check_user_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_marginRight="@dimen/margin_20dp"
                android:text="2017-11-11"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsize5"/>
            <TextView
                android:id="@+id/check_user_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/check_user_time"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginRight="@dimen/margin_20dp"
                android:gravity="center"
                android:textColor="@color/blue"
                android:text="@string/please_edit_phone"
                android:textSize="@dimen/textsize5"/>
            <TextView
                android:id="@+id/check_user_tell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/check_user_time"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginRight="@dimen/margin_20dp"
                android:gravity="center"
                android:layout_toRightOf="@id/check_user_head"
                android:textColor="@color/blue"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:text="@string/please_edit_phone"
                android:textSize="@dimen/textsize5"/>




        </RelativeLayout>
        <LinearLayout
            android:layout_below="@id/check_add_parent_tag"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/check_detail_parent_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/textsize7"
                android:layout_marginTop="@dimen/margin_3dp"
                android:paddingLeft="@dimen/margin_10dp"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:text="one"/>
            <TextView
                android:id="@+id/check_detail_parent_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginTop="@dimen/margin_3dp"
                android:ellipsize="end"
                android:textSize="@dimen/textsize7"
                android:paddingLeft="@dimen/margin_10dp"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:text=""/>
            <TextView
                android:id="@+id/check_detail_parent_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/margin_3dp"
                android:textSize="@dimen/textsize7"
                android:paddingLeft="@dimen/margin_10dp"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:text=""/>
            <TextView
                android:id="@+id/check_detail_parent_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_3dp"
                android:textSize="@dimen/textsize7"
                android:paddingLeft="@dimen/margin_10dp"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:text=""/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_0.5dp"
                android:layout_marginTop="@dimen/margin_3dp"
                android:background="@color/Gainsboro"/>
            <TextView
                android:id="@+id/ill_parent_tag"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:background="@color/WhiteSmoke"
                android:text="记录详情"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_10dp"/>
        </LinearLayout>
        <View
            android:layout_below="@id/check_add_parent_tag"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:background="@color/WhiteSmoke"/>
        <TextView
            android:id="@+id/check_detail_parent_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/del"
            android:layout_below="@id/check_add_parent_tag"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:background="@drawable/radius3_e3bg"
            android:paddingLeft="@dimen/margin_15dp"
            android:paddingRight="@dimen/margin_15dp"
            android:paddingTop="@dimen/margin_3dp"
            android:paddingBottom="@dimen/margin_3dp"
            android:textSize="@dimen/textsize4"
            android:textColor="@color/white"
            />
    </RelativeLayout>

</RelativeLayout>